{
  "name": "zeapi",
  "version": "1.0.0",
  "description": "ZeAPI - API工具应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:web": "node build.js",
    "build:android": "npm run build:web && npm run sync:android && npx cap build android",
    "sync:android": "npx cap sync android",
    "open:android": "npx cap open android",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "api",
    "tool",
    "electron",
    "android"
  ],
  "author": "Lemwood",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "cn.lemwood.zeapi",
    "productName": "ZeAPI",
    "publish": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!src",
      "!.git"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
