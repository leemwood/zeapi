{
  "name": "zeapi",
  "version": "1.0.0",
  "description": "ZeAPI - API工具应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:android": "electron-builder --android",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "api",
    "tool",
    "electron",
    "android"
  ],
  "author": "Lemwood",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "cn.lemwood.zeapi",
    "productName": "ZeAPI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!src",
      "!.git"
    ],
    "android": {
      "packageName": "cn.lemwood.zeapi",
      "versionName": "1.0.0",
      "versionCode": 1,
      "minSdkVersion": 21,
      "targetSdkVersion": 33
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}