    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="cn.lemwood.zeapi.ui.home.HomeFragment"
        android:label="@string/navigation_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_tools"
        android:name="cn.lemwood.zeapi.ui.tools.ToolsFragment"
        android:label="@string/navigation_tools"
        tools:layout="@layout/fragment_tools" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="cn.lemwood.zeapi.ui.settings.SettingsFragment"
        android:label="@string/navigation_settings"
